<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-primary">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li>
      <% unless current_user.nil? %>
      <li class="nav-item">
        <%= link_to "My Bookings", user_bookings_path(current_user), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My Properties", user_properties_path(current_user), class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item dropdown">
        <%= image_tag "https://media-exp1.licdn.com/dms/image/C5603AQGKfVGsdtKTTg/profile-displayphoto-shrink_200_200/0?e=1595462400&v=beta&t=aqpFZpmw5S5vgS3lXFvP3xgbrSGf2vdZ9Vd1e9zNmr4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
