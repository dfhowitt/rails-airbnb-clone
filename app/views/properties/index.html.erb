<h2>Luxurious Properties</h2>
  <div class="d-flex">
    <div class="card-holder">
      <%@properties.each do |property|%>
        <div class="index-property-card">
          <% if property.photos.attached? %>
            <%= cl_image_tag property.photos.first.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="index-card-product-infos">
            <h4><%= link_to property.name, property_path(property)%></h4>
            <h6><%= property.capacity%> guests · <%=property.property_type %> · £<%= property.price.to_i %>/night</h6>
            <p> <%= property.description.capitalize %></p>
          </div>
        </div>
      <% end %>
    </div>
    <img id="map" src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoiZ3VzLXQyNyIsImEiOiJjazlvYmlhYzgwYTh3M25vOGtpenVpOHE0In0.bn0KuBfLkQ7DXflf-mE5RA'>
  </div>

