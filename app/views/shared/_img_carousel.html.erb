<% if @property.photos.length > 1  %>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @property.photos.each_with_index do |photo, index| %>
        <div class="carousel-item text-center <%=index == 0 ? 'active' : ''  %>">
          <%= cl_image_tag photo.key, height: 400, crop: :fill, :class => "" %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% else %>
  <div class="photo-container text-center">
    <%= cl_image_tag @property.photos[0].key, height: 400, crop: :fill, :class => "" %>
  </div>
<% end %>
