<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
url('<%= image_path "banner.jpg", height: 400, crop: :fill %>'); background-size: cover; background-position: center;">
  <div class="title">
    <h1>AirBnB</h1>
    <h4>Find your luxurious getaway</h4>
  </div>

  <form method="get" action="/properties" class="home-search w-50 p-3">
    <input type="text" name="query" autocomplete="off" placeholder="Search" tabindex="100" class="form-control">
  </form>
</div>

  <h2>Recently Added</h2>
  <% new_properties = @properties.sort_by {|obj| obj.created_at} %>
  <% new_properties = new_properties %>

  <div class="home-card-grid mx-4">
    <%new_properties.each do |property|%>
      <%= link_to property_path(property) do %>
        <div class="homepage-property-card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.2)), url('<%= cl_image_path property.photos[0].key, height: 300, width: 400, crop: :fill %>')">
          <% if property.photos.attached? %>
            <div class="homepage-property-card-info h-100 px-2 py-1">
              <div class="bottom text-right">
                <h5 class="mb-1"><%= property.name %></h5>
                <p class="mb-0"><%= property.capacity%> guests · <%=property.property_type %> · <%= number_to_currency(property.price, unit: "£", precision: 0) %>/night</p>
              </div>
            </div>
          <% else %>
            <div class="homepage-property-card-photo" style="background-color: $light-gray"></div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
