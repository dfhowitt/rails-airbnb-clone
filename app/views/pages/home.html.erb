<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
url('<%= image_path "banner.jpg", height: 400, crop: :fill %>'); background-size: cover; background-position: center;">
  <div class="title">
    <h1>AirBnB</h1>
    <h4>Find your luxurious getaway</h4>
  </div>

  <form method="get" action="/properties" class="home-search w-50 p-3">
    <input type="text" name="query" autocomplete="off" placeholder="Search" tabindex="100" class="form-control">
  </form>
</div>

  <h2>Recently Added</h2>
  <% new_properties = @properties.sort_by {|obj| obj.created_at} %>
  <% new_properties = new_properties %>

  <%new_properties.each do |property|%>
  <%= link_to property_path(property) do %>
  <div class="homepage-property-card">
    <% if property.photos.attached? %>
      <div class="homepage-property-card-photo"><%= cl_image_tag property.photos[0].key, height: 150, width: 200, crop: :fill %>
      </div>
    <% end %>
    <div class="homepage-property-card-info">
      <h3><%= property.name%></h3>
      <h5><%= property.capacity%> guests · <%=property.property_type %> · <%= number_to_currency(property.price, unit: "£", precision: 0) %>/night</h5>
      <p> <%= property.description.capitalize %></p>
    </div>
  </div>
  <% end %>
  <% end %>
