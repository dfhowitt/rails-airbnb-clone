<div class="container">
  <h2>Luxurious Properties</h2>
  <div class="d-flex">
    <div class="card-holder">
      <%@properties.each do |property|%>
        <div class="index-property-card">
          <% if property.photos.attached? %>
            <%= cl_image_tag property.photos.first.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="index-card-product-infos">
            <h1><%= property.name %></h1>
            <h2><%= property.description.capitalize %></h2>
            <h2 class="index-property-card-price">Â£<%= property.price %>/Week</h2>
          </div>
        </div>
      <% end %>
    </div>
